@model IEnumerable<PrenotazioneDetails>

@{

    Layout = "_Layout";
    ViewData["Title"] = "Elenco Prenotazioni";
}




<h1>@ViewData["Title"]</h1>
<p>Elenco delle prenotazioni</p>


<p>
    <a asp-action="NewPrenotazione" class="btn btn-primary">Aggiungi una nuova prenotazione</a>
</p>

<div>
    <input type="text" id="searchCodiceFiscale" placeholder="Inserisci Codice Fiscale" />
    <button id="searchButton" class="btn btn-primary">Cerca</button>
</div>




@if (Model.Any())
{
    <table class="table" id="prenotazioniTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Codice Fiscale</th>
                <th>Numero Camera</th>
                <th>Data Prenotazione</th>
                <th>Numero Progressivo</th>
                <th>Anno</th>
                <th>Dal</th>
                <th>Al</th>
                <th>Tariffa</th>
                <th>Caparra</th>
                <th>Totale da pagare</th>

                <th>Dettagli</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prenotazione in Model)
            {
                <tr>
                    <td>@prenotazione.ID</td>
                    <td>@prenotazione.CodiceFiscale</td>
                    <td>@prenotazione.NumeroCamera</td>
                    <td>@prenotazione.DataPrenotazione.ToShortDateString()</td>
                    <td>@prenotazione.NumeroProgressivo</td>
                    <td>@prenotazione.Anno</td>
                    <td>@prenotazione.Dal.ToShortDateString()</td>
                    <td>@prenotazione.Al.ToShortDateString()</td>
                    <td>@prenotazione.Tariffa</td>
                    <td>@prenotazione.Caparra</td>
                    <td>@(prenotazione.Tariffa - prenotazione.Caparra)</td>

                    <td>
                        @prenotazione.Dettagli
                    </td>
                    <td>
                        <a asp-action="EditPrenotazione" asp-route-id="@prenotazione.ID" class="btn btn-primary">Modifica</a>
                        <button type="button" class="btn btn-danger delete-button" data-id="@prenotazione.ID">Elimina</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">Nessun cliente trovato.</div>
}


<div id="alertMessage" class="alert alert-warning" style="display:none;">Nessun cliente trovato.</div>

<div id="alertMessage" class="alert alert-warning" style="display:none;">Nessuna prenotazione trovata per il codice fiscale inserito.</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#searchButton').on('click', function() {
                var codiceFiscale = $('#searchCodiceFiscale').val();
                $.ajax({
                    url: '@Url.Action("SearchPrenotazioniByCodiceFiscale", "Prenotazione")',
                    type: 'GET',
                    data: { codiceFiscale: codiceFiscale },
                    success: function(result) {
                        var tbody = $('#prenotazioniTable tbody');
                        tbody.empty();
                        if (result.length > 0) {
                            $('#alertMessage').hide();
                            $.each(result, function(index, prenotazione) {
                                tbody.append('<tr>' +
                                    '<td>' + prenotazione.id + '</td>' +
                                    '<td>' + prenotazione.codiceFiscale + '</td>' +
                                    '<td>' + prenotazione.numeroCamera + '</td>' +
                                    '<td>' + new Date(prenotazione.dataPrenotazione).toLocaleDateString() + '</td>' +
                                    '<td>' + prenotazione.numeroProgressivo + '</td>' +
                                    '<td>' + prenotazione.anno + '</td>' +
                                    '<td>' + new Date(prenotazione.dal).toLocaleDateString() + '</td>' +
                                    '<td>' + new Date(prenotazione.al).toLocaleDateString() + '</td>' +
                                    '<td>' + prenotazione.tariffa + '</td>' +
                                    '<td>' + prenotazione.caparra + '</td>' +
                                    '<td>' + (prenotazione.tariffa - prenotazione.caparra) + '</td>' +
                                    '<td>' + prenotazione.dettagli + '</td>' +
                                    '<td><a href="@Url.Action("EditPrenotazione")/' + prenotazione.id + '" class="btn btn-primary">Modifica</a>' +
                                    '<button type="button" class="btn btn-danger delete-button" data-id="' + prenotazione.id + '">Elimina</button></td>' +
                                '</tr>');
                            });
                        } else {
                            $('#alertMessage').show();
                        }
                    },
                    error: function() {
                        alert('Errore durante la ricerca delle prenotazioni.');
                    }
                });
            });

            $('#prenotazioniTable').on('click', '.delete-button', function() {
                var prenotazioneId = $(this).data('id');
                var row = $(this).closest('tr');
                if (confirm('Sei sicuro di voler eliminare la prenotazione?')) {
                    $.ajax({
                        url: '@Url.Action("DeletePrenotazione")/' + prenotazioneId,
                        type: 'DELETE',
                        success: function(result) {
                            if (result.success) {
                                row.remove();
                            } else {
                                alert('Errore durante l\'eliminazione della prenotazione.');
                            }
                        },
                        error: function() {
                            alert('Errore durante l\'eliminazione della prenotazione.');
                        }
                    });
                }
            });
        });
    </script>
}