@model IEnumerable<Albergo.Models.ServizioPrenotazione>

@{
    ViewData["Title"] = "Servizi Prenotazione";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>ID Prenotazione</th>
            <th>ID Servizio</th>
            <th>Data</th>
            <th>Quantita</th>
            <th>Prezzo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.IDPrenotazione</td>
                <td>@item.IDServizio</td>
                <td>@item.Data.ToString("d")</td>
                <td>@item.Quantita</td>
                <td>@item.Prezzo.ToString("F2")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary">Edit</a>
                    <button asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>


<a href="@Url.Action("NewServizioPrenotazione")" class="btn btn-primary">Nuovo Servizio Prenotazione</a>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.delete-button').on('click', function() {
                var id = $(this).data('id');
                var row = $(this).closest('tr');
                if (confirm('Sei sicuro di voler eliminare il servizio prenotazione?')) {
                    $.ajax({
                        url: '@Url.Action("Delete", "ServizioPrenotazione")/' + id,
                        type: 'DELETE',
                        success: function(result) {
                            if (result.success) {
                                row.remove();
                            } else {
                                alert('Errore durante l\'eliminazione del servizio prenotazione.');
                            }
                        },
                        error: function() {
                            alert('Errore durante l\'eliminazione del servizio prenotazione.');
                        }
                    });
                }
            });
        });
    </script>
}
